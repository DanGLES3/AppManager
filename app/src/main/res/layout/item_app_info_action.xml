<com.google.android.material.button.MaterialButton xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.AppTheme.Button.TextButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="120dp"
    android:layout_marginHorizontal="1dp"
    android:focusable="true"
    android:gravity="center"
    android:paddingHorizontal="@dimen/padding_medium"
    android:paddingVertical="@dimen/padding_large"
    android:textAppearance="?android:attr/textAppearanceListItem"
    android:textColor="?attr/colorOnPrimaryContainer"
    android:textSize="@dimen/font_size_large"
    app:iconGravity="textTop"
    app:iconSize="30dp"
    app:iconTint="?attr/colorOnPrimaryContainer"
    app:backgroundTint="?attr/colorControlHighlight"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.AppTheme.None"
    tools:text="@tools:sample/cities"
    tools:icon="@tools:sample/avatars" />
